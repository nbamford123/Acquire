{
  "version": "1.0.0",
  "workspace": ["./engine", "./service", "./client"],
  "tasks": {
    "dev:engine": "cd engine && deno task dev",
    "dev:service": "cd service && deno task dev",
    "dev:client": "cd client && deno task dev",
    "dev": "deno run --allow-net --allow-env --env-file --watch service/main.ts",
    "start": "deno run --allow-net --allow-env service/main.ts",
    "fmt:check": "deno fmt --check",
    "validate": "deno fmt  && deno lint && deno check && deno test --allow-all --env-file"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.14",
    "@std/expect": "jsr:@std/expect@1.0.17",
    "@acquire/engine/types": "./engine/types/index.ts"
  },
  "lint": {
    "include": ["./"],
    "exclude": ["**/node_modules/", "**/__test__/", "**/dist/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["./"],
    "exclude": ["**/node_modules/", "**/dist/"],
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "useTabs": false
  },
  "deploy": {
    "project": "acquire",
    "entrypoint": "./service/main.ts",
    "include": ["main.ts", "engine/"],
    "exclude": ["__test__/", "*.test.ts"]
  }
}
