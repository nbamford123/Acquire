{
  "version": "1.0.0",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns", "es2022"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "imports": {
    "lit": "npm:lit@^3.3.0",
    "lit/decorators": "npm:lit@^3.3.0/decorators.js",
    "@acquire/types": "../shared/types/index.ts"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --watch dev-server.ts",
    "build": "deno bundle --platform browser --output dist/bundle.js --sourcemap=external src/main.ts",
    "preview": "deno run --allow-net --allow-read dist/server.ts",
    "deploy": "deno run --allow-net --allow-read --allow-write deploy.ts"
  }
}
